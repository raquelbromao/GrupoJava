
public class TesteVariaveis {
	
	//aprender a lidar com variaveis
	public static void main(String[] args) {
		int idadeRoberto = 40;
		int idadeRaquel = 23;
		
		System.out.println(idadeRoberto);
		System.out.println(idadeRaquel);
		
		int idadeAnoQueVemRo;
		int idadeAnoQueVemRa;
		
		idadeAnoQueVemRo = idadeAnoQueVemRo + 1;
		idadeAnoQueVemRa = idadeRaquel + 1;
		
		System.out.println(idadeAnoQueVemRo);
		System.out.println(idadeAnoQueVemRa);		
		
	}
}
